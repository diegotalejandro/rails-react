<div class="container" id=formulario >
    <h2 id= "formulario">Ingresa</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.label :Correo_electrónico,for:"exampleInputEmail1" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id:"exampleInputEmail1"%>
  </div>

  <div class="form-group">
    <%= f.label :Contraseña %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group form-check">
      <%= f.check_box :remember_me %>
      <%= f.label :Recuerdame %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.submit "Ingresar",class: "btn btn-default btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
 </div >
